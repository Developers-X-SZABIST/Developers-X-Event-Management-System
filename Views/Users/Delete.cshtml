@model Event_Management_System.Models.Entities.User
@{
    ViewData["Title"] = "Terminate Account";
}

<div class="max-w-md mx-auto text-center py-12">
    <div class="bg-red-500/10 border border-red-500/20 p-12 rounded-[3rem] shadow-2xl">
        <h1 class="text-4xl font-black text-white mb-4 tracking-tighter">DELETE USER?</h1>
        <p class="text-gray-400 text-sm mb-8 italic">This will remove <span class="text-white font-bold">@Model.Username</span> and all associated data from the database.</p>

        <div class="bg-black/40 p-4 rounded-2xl mb-8 border border-white/5">
            <p class="text-[10px] font-black uppercase text-gray-600 mb-1">Email Address</p>
            <p class="text-sm font-bold">@Model.Email</p>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-black py-4 rounded-2xl transition-all shadow-xl shadow-red-500/20 mb-4">
                TERMINATE ACCOUNT
            </button>
            <a asp-action="Index" class="text-xs font-bold text-gray-500 hover:text-white uppercase tracking-widest">Keep Account</a>
        </form>
    </div>
</div>