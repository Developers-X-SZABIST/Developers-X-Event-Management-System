@model IEnumerable<Event_Management_System.Models.Entities.User>
@using Event_Management_System.Models.Entities
@{
    ViewData["Title"] = "User Management";
}

<div class="flex justify-between items-center mb-8">
    <div>
        <h1 class="text-3xl font-black">User Accounts</h1>
        <p class="text-gray-500 text-xs uppercase tracking-[0.2em] font-bold mt-1">System Administration</p>
    </div>
    
</div>

<div class="bg-[#161920] border border-white/5 rounded-3xl overflow-hidden shadow-2xl">
    <table class="w-full text-left">
        <thead class="bg-white/5 text-[10px] font-black uppercase tracking-widest text-gray-400">
            <tr>
                <th class="p-6">User Details</th>
                <th class="p-6">Access Level</th>
                <th class="p-6 text-right">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
            @foreach (var item in Model)
            {
                    <tr class="hover:bg-white/[0.02] transition-colors">
                        <td class="p-6">
                            <div class="font-bold text-white">@item.Username</div>
                            <div class="text-xs text-gray-500">@item.Email</div>
                        </td>
                        <td class="p-6">
                        @{
                            var roleColor = item.Role == Roles.Admin ? "text-purple-400 border-purple-500/30 bg-purple-500/5" : "text-gray-400 border-white/10";
                        }
                            <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-tighter border @roleColor">
                            @item.Role
                            </span>
                        </td>
                        <td class="p-6 text-right space-x-3">
                            <a asp-action="Edit" asp-route-id="@item.UserId" class="text-xs font-bold text-purple-400 hover:text-purple-300">EDIT</a>
                            <a asp-action="Delete" asp-route-id="@item.UserId" class="text-xs font-bold text-red-500 hover:text-red-400">DELETE</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>