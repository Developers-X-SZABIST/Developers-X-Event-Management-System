@model Event_Management_System.Models.Entities.Event

<div class="max-w-xl mx-auto mt-10">
    <div class="bg-red-500/10 border border-red-500/20 rounded-3xl p-8 text-center shadow-2xl shadow-red-500/5">
        <div class="w-16 h-16 bg-red-500/20 text-red-500 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        </div>

        <h1 class="text-3xl font-black text-white mb-2">Delete Event?</h1>
        <p class="text-gray-400 text-sm mb-8">This action is permanent and cannot be undone. You are about to delete <span class="text-white font-bold">"@Model.Title"</span>.</p>

        <div class="bg-black/20 rounded-2xl p-4 flex justify-around text-xs font-bold uppercase tracking-widest text-gray-500 mb-8 border border-white/5">
            <div>@Model.EventDate.ToShortDateString()</div>
            <div>@Model.Location</div>
        </div>

        <form asp-action="Delete" class="flex flex-col gap-3">
            <input type="hidden" asp-for="EventId" />
            <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-black py-4 rounded-xl transition-all active:scale-95 shadow-lg shadow-red-500/20">
                Yes, Delete Permanently
            </button>
            <a asp-action="Index" class="text-gray-500 hover:text-white font-bold text-sm py-2">
                Cancel and Go Back
            </a>
        </form>
    </div>
</div>