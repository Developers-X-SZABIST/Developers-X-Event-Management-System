@model IEnumerable<Event_Management_System.Models.Entities.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="flex justify-between items-center mb-8">
    
    <h1 class="text-3xl font-black">Manage Events</h1>
    @if (User.IsInRole("Admin"))
    {
            <a asp-action="Create" class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-xl font-bold transition-all shadow-lg shadow-purple-500/20">
                + Create New
            </a>
    }
</div>

<div class="bg-[#161920] border border-white/5 rounded-3xl overflow-hidden shadow-2xl">
    <table class="w-full text-left border-collapse">
        <thead class="bg-white/5 text-gray-400 text-xs uppercase tracking-widest font-black">
            <tr>
                <th class="p-5">Title</th>
                <th class="p-5">Location</th>
                <th class="p-5">Date</th>
                <th class="p-5 text-right">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
            @foreach (var item in Model)
            {
                    <tr class="hover:bg-white/[0.02] transition-colors">
                        <td class="p-5 font-bold">@item.Title</td>
                        <td class="p-5 text-gray-400 text-sm">@item.Location</td>
                        <td class="p-5 text-purple-400 text-sm font-mono">@item.EventDate.ToShortDateString()</td>
                        <td class="p-5 text-right space-x-3">
                            <a asp-action="Details" asp-route-id="@item.EventId" class="text-xs font-bold text-gray-400 hover:text-white">DETAILS</a>
                        @if (User.IsInRole("Admin"))
                        {
                                    <a asp-action="Edit" asp-route-id="@item.EventId" class="text-xs font-bold text-purple-400 hover:text-purple-300">EDIT</a>
                                    <a asp-action="Delete" asp-route-id="@item.EventId" class="text-xs font-bold text-red-500 hover:text-red-400">DELETE</a>
                        }
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>