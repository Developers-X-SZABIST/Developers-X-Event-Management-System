@model Event_Management_System.Models.Entities.Event
@{
    ViewData["Title"] = "Confirm Registration";
    int.TryParse(Model.MaxCapacity, out int max);
    int current = Model.Registrations?.Count ?? 0;
    int seatsLeft = max - current;
}

<div class="max-w-2xl mx-auto py-10">
    <div class="bg-[#161920] border border-white/10 rounded-[2.5rem] overflow-hidden shadow-2xl">
        <div class="p-12 text-center border-b border-white/5 bg-gradient-to-b from-purple-500/10 to-transparent">
            <h1 class="text-4xl md:text-5xl font-black mb-4 tracking-tighter uppercase leading-none">
                Confirm Your <span class="text-purple-500">Seat</span>
            </h1>
            <p class="text-gray-400 font-bold uppercase tracking-widest text-sm">@Model.Title</p>
        </div>

        <div class="p-12 space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="p-6 bg-black/20 rounded-2xl border border-white/5">
                    <p class="text-[10px] font-black uppercase text-gray-500 mb-2 tracking-widest">When & Where</p>
                    <p class="text-lg font-bold text-white leading-tight">@Model.EventDate.ToString("MMMM dd, yyyy")</p>
                    <p class="text-sm text-purple-400 font-bold mt-1 uppercase">@Model.Location</p>
                </div>
                <div class="p-6 bg-black/20 rounded-2xl border border-white/5">
                    <p class="text-[10px] font-black uppercase text-gray-500 mb-2 tracking-widest">Availability</p>
                    <p class="text-lg font-bold text-white leading-tight">@seatsLeft Seats Remaining</p>
                    <p class="text-sm text-gray-500 font-bold mt-1 uppercase">Total Capacity: @max</p>
                </div>
            </div>

            @if (ViewBag.IsAlreadyRegistered)
            {
                    <div class="bg-purple-600/10 border border-purple-500/30 p-8 rounded-3xl text-center">
                        <p class="text-purple-400 font-black uppercase tracking-widest mb-4">You are in!</p>
                        <p class="text-gray-300 text-sm mb-6 font-bold">You have already registered for this event. Check your dashboard for details.</p>
                        <a href="/" class="inline-block text-xs font-black uppercase tracking-widest text-white border-b-2 border-purple-500 pb-1 hover:text-purple-400 transition-colors">Return to Home</a>
                    </div>
            }
            else if (seatsLeft <= 0)
            {
                    <div class="bg-red-500/10 border border-red-500/30 p-8 rounded-3xl text-center">
                        <p class="text-red-500 font-black uppercase tracking-widest mb-2">Event Full</p>
                        <p class="text-gray-400 text-sm font-bold">Sorry, we've reached maximum capacity for this event.</p>
                    </div>
            }
            else
            {
                    <form asp-action="ConfirmRegistration" asp-controller="Events" method="post">
                        <input type="hidden" name="eventId" value="@Model.EventId" />
                        <button type="submit" class="w-full bg-white text-black py-6 rounded-2xl font-black text-sm uppercase tracking-[0.2em] hover:bg-purple-600 hover:text-white transition-all shadow-xl shadow-white/5 active:scale-[0.98]">
                            Confirm My Registration
                        </button>
                    </form>

                    
            }

            <div class="text-center pt-4">
                <a href="/" class="text-[10px] font-black text-gray-500 hover:text-white uppercase tracking-[0.3em] transition-colors">
                    Cancel & Go Back
                </a>
            </div>
        </div>
    </div>
</div>