@using Event_Management_System.Models.Entities
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    
    <h1 style="line-height: 1.5em; margin-top: 30px;" class="">Events! <br>
       For Eventful People</h1>
</div>

@if (User.IsInRole(Roles.Admin))
{
    <text>
            <div style="text-align: center; margin-top: 30px;" class="d-grid gap-2">
                <a asp-action="Index" asp-controller="Users"><button style="border: 4px solid black; border-radius: 20px" border-radius: 20px" class="btn btn-lg btn-primary" type="button"> Manage Users</button></a>
            </div>
            
    </text>
}

@if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Organizer))
{
    <text>
                <div style="text-align: center; margin-top: 30px;" class="d-grid gap-2">
                    <a asp-action="Index" asp-controller="Events"><button style="border: 4px solid black; border-radius: 20px" border-radius: 20px" class="btn btn-lg btn-primary" type="button"> Manage Events</button></a>
                </div>
                <div style="text-align: center; margin-top: 30px;" class="d-grid gap-2">
                    <a asp-action="Index" asp-controller="Registrations"><button style="border: 4px solid black; border-radius: 20px" border-radius: 20px" class="btn btn-lg btn-primary" type="button"> Manage Registrations</button></a>
                </div>
    </text>
}

@if (User.Identity.IsAuthenticated)
{
    <text>
            <div style="text-align: center; margin-top: 30px;" class="d-grid gap-2">
                <a asp-action="Logout" asp-controller="Auth"><button style="border: 4px solid black; border-radius: 20px" border-radius: 20px" class="btn btn-lg btn-primary" type="button"> Logout</button></a>
            </div>
    </text>
}
else
{
    <text>
            <div style="text-align: center; margin-top: 30px;" class="d-grid gap-2">
                <a asp-action="Login" asp-controller="Auth"><button style="border: 4px solid black; border-radius: 20px" border-radius: 20px" class="btn btn-lg btn-primary" type="button"> Login</button></a>
            </div>

            <div style="text-align: center; margin-top: 30px;" class="d-grid gap-2">
                <a asp-action="Register" asp-controller="Auth"><button style="border: 4px solid black; border-radius: 20px" class="btn btn-lg btn-primary" type="button"> Register</button></a>
            </div>
    </text>
}













<div class="card shadow-sm" style="max-width: 22rem;">

    <!-- Event Image (optional) -->
    <img src="event-image.jpg" class="card-img-top" alt="Event Image">

    <!-- If you want TEXT instead of image, remove img and use this:
    <div class="card-header text-center fw-bold">
      Event Title
    </div>
    -->

    <div class="card-body">
        <h5 class="card-title">Example Event Card</h5>
        <p class="card-text">
            Join us for an exciting tech event featuring talks, networking,
            and workshops.
        </p>
    </div>

    <!-- Footer -->
    <div class="card-footer d-flex justify-content-between align-items-center">
        <a asp-action="Create" asp-controller="Registrations" class="btn btn-primary btn-sm">
            Register
        </a>
        <small class="text-muted">
            Deadline: 25 Oct 2025
        </small>
    </div>

</div>




