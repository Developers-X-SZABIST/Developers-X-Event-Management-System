<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventX</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .nav-link-active {
            color: #a855f7; 
            border-bottom: 2px solid #a855f7;
        }
    </style>
</head>
<body class="bg-[#0f1115] text-white font-sans min-h-screen flex flex-col">
    <header class="bg-[#161920]/95 backdrop-blur-md border-b border-white/10 sticky top-0 z-50">
        <nav class="max-w-6xl mx-auto px-6 h-20 flex justify-between items-center">

            <div class="flex items-center gap-12">
                <a asp-controller="Home" asp-action="Index" class="text-3xl font-black tracking-tighter text-purple-500 hover:text-purple-400 transition-all">
                    EVENTX
                </a>

                <div class="flex items-center gap-8">
                    

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                                    
                                    <a asp-controller="Users" asp-action="Index" 
                                       class="text-sm font-black tracking-widest text-gray-400 hover:text-white transition-colors uppercase leading-none pt-1">
                                        Users
                                    </a>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                                    <a asp-controller="Events" asp-action="Index" 
                                       class="text-sm font-black tracking-widest uppercase hover:text-purple-400 transition-colors leading-none pt-1">
                                        Events
                                    </a>
                                    <a asp-controller="Registrations" asp-action="Index" 
                                       class="text-sm font-black tracking-widest text-gray-400 hover:text-white transition-colors uppercase leading-none pt-1">
                                        Registrations
                                    </a>
                        }
                    }
                </div>
            </div>

            <div class="flex items-center gap-6">
                @if (!User.Identity.IsAuthenticated)
                {
                        <a asp-controller="Auth" asp-action="Login" class="text-sm font-black tracking-widest uppercase hover:text-purple-400 transition-colors">Login</a>
                        <a asp-controller="Auth" asp-action="Register" class="bg-purple-600 px-8 py-3 rounded-xl text-sm font-black tracking-wider hover:bg-purple-700 transition-all shadow-lg shadow-purple-500/30 uppercase">
                            Sign Up
                        </a>
                }
                else
                {
                        <div class="flex items-center gap-6 pl-8 border-l border-white/20">
                            <div class="flex flex-col items-end justify-center">
                                <span class="text-sm font-black text-purple-500 leading-none mb-1">@User.Identity.Name</span>
                                <span class="text-[10px] font-bold text-gray-500 uppercase tracking-widest leading-none">
                                @((User.IsInRole("Admin")) ? "Admin" : (User.IsInRole("Organizer") ? "Organizer" : "Public"))
                                </span>
                            </div>
                            <a asp-controller="Auth" asp-action="Logout" 
                               class="text-xs font-black text-red-500 hover:text-white border border-red-500/20 px-4 py-2 rounded-lg transition-all hover:bg-red-600 uppercase">
                                Logout
                            </a>
                        </div>
                }
            </div>
        </nav>
    </header>

    <main class="max-w-6xl mx-auto px-6 py-12 flex-grow w-full">
        @RenderBody()
    </main>

    <footer class="text-center py-12 border-t border-white/5 text-gray-600 text-xs font-black tracking-[0.2em] uppercase">
        &copy; 2026 Event Management System
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>