

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event_Management_System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/bootswatch-css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Event_Management_System.styles.css" asp-append-version="true" />

   
</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-3 text-white"
                   asp-controller="Home" asp-action="Index">
                    EventX
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarColor01">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">

                    <!-- LEFT NAV -->
                    <ul class="navbar-nav me-auto">

                        <!-- EVENTS -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-bold fs-5"
                               data-bs-toggle="dropdown" href="#">
                                Events
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item"
                                   asp-controller="Events"
                                   asp-action="Index">
                                    View All
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="dropdown-item"
                                       asp-controller="Events"
                                       asp-action="Create">
                                        Create
                                    </a>
                                }
                            </div>
                        </li>

                        <!-- USERS (Admin only) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold fs-5"
                                   data-bs-toggle="dropdown" href="#">
                                    Users
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item"
                                       asp-controller="Users"
                                       asp-action="Index">
                                        View All
                                    </a>
                                    <a class="dropdown-item"
                                       asp-controller="Users"
                                       asp-action="Create">
                                        Create
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>

                    <!-- SEARCH -->
                    <form class="d-flex me-3">
                        <input class="form-control me-sm-2"
                               type="search"
                               placeholder="Not Implemented">
                        <button class="btn btn-secondary" type="submit">
                            Search
                        </button>
                    </form>

                    <!-- RIGHT AUTH -->
                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Auth"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Auth"
                                   asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link fw-bold text-light">
                                    @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning"
                                   asp-controller="Auth"
                                   asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Event_Management_System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
