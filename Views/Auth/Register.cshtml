@model Event_Management_System.Models.Entities.User

@{
    ViewData["Title"] = "Register";
}

<div class="max-w-md mx-auto mt-10">
    <div class="mb-8 text-center md:text-left">
        <h1 class="text-4xl font-black tracking-tight mb-2 text-white">Create Account</h1>
        <p class="text-purple-400 font-medium">Join the EventX community today</p>
    </div>

    <div class="bg-[#161920] border border-white/5 p-8 rounded-3xl shadow-2xl">
        <form asp-action="Register" method="post" class="space-y-5">

            <div>
                <label asp-for="Username" class="block text-[10px] font-black uppercase tracking-[0.2em] text-gray-500 mb-2">Username</label>
                <input asp-for="Username" placeholder="Choose a unique username" 
                       class="w-full bg-[#0f1115] border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-purple-500 transition-colors" />
                <span asp-validation-for="Username" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-[10px] font-black uppercase tracking-[0.2em] text-gray-500 mb-2">Email Address</label>
                <input asp-for="Email" type="email" placeholder="name@domain.com"
                       class="w-full bg-[#0f1115] border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-purple-500 transition-colors" />
                <span asp-validation-for="Email" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="PasswordHash" class="block text-[10px] font-black uppercase tracking-[0.2em] text-gray-500 mb-2">Password</label>
                <input asp-for="PasswordHash" type="password" placeholder="Create a strong password"
                       class="w-full bg-[#0f1115] border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-purple-500 transition-colors" />
                <span asp-validation-for="PasswordHash" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 rounded-xl transition-all shadow-lg shadow-purple-500/10 active:scale-[0.98] mt-2">
                Create Account
            </button>
        </form>

        <div class="mt-8 pt-6 border-t border-white/5 text-center">
            <p class="text-gray-500 text-sm font-medium">
                Already have an account? 
                <a asp-action="Login" asp-controller="Auth" class="text-purple-400 font-bold hover:text-purple-300 ml-1 transition-colors">Login here</a>
            </p>
        </div>
    </div>
</div>