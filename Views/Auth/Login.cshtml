@model Event_Management_System.Models.Entities.User


@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="Login" method="post">
    <div class="form-group mb-3">
        <label asp-for="Username">Enter Username</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PasswordHash">Enter Password</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Login</button>
</form>

<div class="mt-3">
    <p>Not Registered? <a class="btn btn-secondary" asp-action="Register" asp-controller="Auth">Register</a></p>
</div>

