@model Event_Management_System.Models.Entities.User

@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto mt-16">
    <div class="mb-10 text-center md:text-left">
        <h1 class="text-4xl font-black tracking-tight mb-2">Welcome Back</h1>
        <p class="text-purple-400 font-medium">Login to your EventX account</p>
    </div>

    <div class="bg-[#161920] border border-white/5 p-8 rounded-3xl shadow-2xl">
        <form asp-action="Login" method="post" class="space-y-6">

            <div>
                <label asp-for="Username" class="block text-xs font-black uppercase tracking-widest text-gray-500 mb-2">Username</label>
                <input asp-for="Username" placeholder="Your username" 
                       class="w-full bg-[#0f1115] border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-purple-500 transition-colors" />
                <span asp-validation-for="Username" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="PasswordHash" class="block text-xs font-black uppercase tracking-widest text-gray-500 mb-2">Password</label>
                <input asp-for="PasswordHash" type="password" placeholder="••••••••"
                       class="w-full bg-[#0f1115] border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-purple-500 transition-colors" />
                <span asp-validation-for="PasswordHash" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 rounded-xl transition-all shadow-lg shadow-purple-500/10 active:scale-[0.98]">
                Login to Account
            </button>
        </form>

        <div class="mt-8 pt-6 border-t border-white/5 text-center">
            <p class="text-gray-500 text-sm">
                Don't have an account? 
                <a asp-action="Register" asp-controller="Auth" class="text-purple-400 font-bold hover:text-purple-300 ml-1">Register now</a>
            </p>
        </div>
    </div>
</div>