@model IEnumerable<Event_Management_System.Models.Entities.Registration>

@{
    ViewData["Title"] = "Index";
}

<div class="flex justify-between items-end mb-10">
    <div>
        <h1 class="text-4xl font-black tracking-tight">Registrations</h1>
        <p class="text-purple-400 text-sm font-medium uppercase tracking-widest mt-2">Attendee Management</p>
    </div>
</div>

<div class="bg-[#161920] border border-white/5 rounded-3xl overflow-hidden shadow-2xl">
    <table class="w-full text-left border-collapse">
        <thead>
            <tr class="bg-white/5 text-[10px] font-black uppercase tracking-widest text-gray-500 border-b border-white/5">
                <th class="p-6">Attendee</th>
                <th class="p-6">Event Title</th>
                <th class="p-6">Date Registered</th>
                <th class="p-6">Current Status</th>
                <th class="p-6 text-right">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
            @foreach (var item in Model)
            {
                        <tr class="hover:bg-purple-500/5 transition-colors">
                            <td class="p-6 font-bold text-white">@item.User.Username</td>
                            <td class="p-6 text-gray-400">@item.Event.Title</td>
                            <td class="p-6 text-gray-500 text-sm font-mono">@item.RegistrationDate.ToShortDateString()</td>
                            <td class="p-6">
                                <span class="bg-purple-500/10 text-purple-400 px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-tighter border border-purple-500/20">
                            @item.Status
                                </span>
                            </td>
                            <td class="p-6 text-right space-x-4">
                        
                                <a asp-action="Details" asp-route-id="@item.RegistrationId" class="text-xs font-black text-gray-500 hover:text-white transition-colors">INFO</a>
                                <a asp-action="Delete" asp-route-id="@item.RegistrationId" class="text-xs font-black text-red-500 hover:text-red-400 transition-colors">REMOVE</a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</div>