@model Event_Management_System.Models.Entities.Registration

@{
    ViewData["Title"] = "Delete Registration";
}

<div class="max-w-lg mx-auto mt-16">
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-red-500/10 text-red-500 rounded-full mb-4 ring-8 ring-red-500/5">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
        </div>
        <h1 class="text-4xl font-black tracking-tight text-white">Cancel Entry?</h1>
        <p class="text-gray-500 mt-2 font-medium">This will permanently remove the attendee from the event.</p>
    </div>

    <div class="bg-[#161920] border border-red-500/20 rounded-[2rem] overflow-hidden shadow-2xl mb-6">
        <div class="p-8">
            <div class="space-y-6">
                <div class="flex justify-between items-center border-b border-white/5 pb-4">
                    <span class="text-[10px] font-black uppercase tracking-widest text-gray-500">Attendee</span>
                    <span class="text-white font-bold text-lg">@Model.User?.Username</span>
                </div>

                <div class="flex justify-between items-center border-b border-white/5 pb-4">
                    <span class="text-[10px] font-black uppercase tracking-widest text-gray-500">Event Title</span>
                    <span class="text-purple-400 font-bold">@Model.Event?.Title</span>
                </div>

                <div class="flex justify-between items-center">
                    <span class="text-[10px] font-black uppercase tracking-widest text-gray-500">Registered On</span>
                    <span class="text-gray-400 font-mono text-sm">@Model.RegistrationDate.ToShortDateString()</span>
                </div>
            </div>
        </div>

        <div class="bg-red-500/5 p-8 border-t border-red-500/10">
            <form asp-action="Delete">
                <input type="hidden" asp-for="RegistrationId" />
                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-black py-4 rounded-xl transition-all shadow-lg shadow-red-500/20 active:scale-[0.98]">
                    CONFIRM DELETE
                </button>
            </form>
            <div class="text-center mt-4">
                <a asp-action="Index" class="text-xs font-black text-gray-500 hover:text-white uppercase tracking-widest transition-colors">
                    Wait, go back
                </a>
            </div>
        </div>
    </div>
</div>